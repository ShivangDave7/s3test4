<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="searchResultVM" type="com.isapplication.app.modules.searchresult.data.viewmodel.SearchResultVM"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearGroup278"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearGroup262"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_width="match_parent" android:orientation="horizontal">
                <EditText
                    android:background="@drawable/rectangle_border_blue_50_radius_5"
                    android:drawablePadding="@dimen/_10pxh"
                    android:drawableStart="@drawable/img_searchicon"
                    android:ellipsize="end"
                    android:hint="@string/lbl_nike_air_max"
                    android:id="@+id/etGroup46"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85"
                    android:layout_width="0dp"
                    android:paddingBottom="@dimen/_17pxv"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@={searchResultVM.searchResultModel.etGroup46Value}"
                    android:textColorHint="@color/indigo_900_87" style="@style/etRoundedOutline_2"/>
                <ImageView android:clickable="true"
                    android:id="@+id/imageShorticon"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_shorticon"/>
                <ImageView android:clickable="true"
                    android:id="@+id/imageFilter"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_filter"/>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <androidx.core.widget.NestedScrollView
            android:clipToPadding="false" android:fillViewport="true"
            android:id="@+id/scrollViewScrollview"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_49pxv"
            android:layout_marginTop="@dimen/_18pxv"
            android:layout_weight="1" android:layout_width="match_parent">
            <LinearLayout android:gravity="start"
                android:id="@+id/linearGroup269"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="vertical">
                <View android:background="@color/blue_50"
                    android:id="@+id/lineLine39"
                    android:layout_height="@dimen/_1pxv" android:layout_width="@dimen/_375pxh"/>
                <LinearLayout android:id="@+id/linearGroup263"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <TextView android:alpha="0.5"
                        android:ellipsize="end"
                        android:id="@+id/txtResultCounter"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2pxv"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_weight="0.39"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@{searchResultVM.searchResultModel.txtResultCounter}"
                        style="@style/txtPoppinsbold12_4" tools:text="@string/lbl_145_result"/>
                    <LinearLayout android:id="@+id/linearGroup280"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_174pxh"
                        android:layout_weight="0.61"
                        android:layout_width="0dp" android:orientation="horizontal">
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtManShoes"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_1pxv"
                            android:layout_marginTop="@dimen/_1pxv"
                            android:layout_weight="0.75"
                            android:layout_width="0dp"
                            android:singleLine="true"
                            android:text="@{searchResultVM.searchResultModel.txtManShoes}"
                            style="@style/txtPoppinsbold12_2" tools:text="@string/lbl_man_shoes"/>
                        <ImageView android:id="@+id/imageDownIcon"
                            android:layout_height="@dimen/_24pxh"
                            android:layout_marginStart="@dimen/_8pxh"
                            android:layout_width="@dimen/_24pxh"
                            android:scaleType="fitXY" android:src="@drawable/img_downicon"/>
                    </LinearLayout>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:gravity="center_horizontal"
                    android:id="@+id/recyclerSearchResult"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="match_parent"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2" itemSpace="@{@dimen/_13pxh}"
                    tools:itemCount="6" tools:listitem="@layout/row_search_result1"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>
