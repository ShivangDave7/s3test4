<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="notification2RowModel" type="com.isapplication.app.modules.notification1.data.model.Notification2RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearActivitydetail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylewhite_A700">
        <ImageView android:id="@+id/imageTransactionico"
            android:layout_height="@dimen/_24pxh"
            android:layout_marginBottom="@dimen/_110pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="@dimen/_24pxh"
            android:scaleType="fitXY" android:src="@drawable/img_transactionico"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearActivitydetail1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_weight="0.93" android:layout_width="0dp" android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtTransactionNik"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{notification2RowModel.txtTransactionNik}"
                style="@style/txtPoppinsbold14_2" tools:text="@string/msg_transaction_nik"/>
            <TextView android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent"
                android:text="@{notification2RowModel.txtDescription}"
                style="@style/txtPoppinsregular12" tools:text="@string/msg_culpa_cillum_co"/>
            <TextView android:ellipsize="end" android:id="@+id/txtTime"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{notification2RowModel.txtTime}"
                style="@style/txtPoppinsregular10_1" tools:text="@string/msg_april_30_2014"/>
        </LinearLayout>
    </LinearLayout>
</layout>
