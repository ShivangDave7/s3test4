<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="splashScreenVM" type="com.isapplication.app.modules.splashscreen.data.viewmodel.SplashScreenVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearSplashScreen"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylelight_blue_A200">
        <androidx.appcompat.widget.Toolbar android:gravity="start"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <LinearLayout android:id="@+id/linearUIStatusBar"
                android:layout_height="match_parent"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageTimeStyle"
                    android:layout_height="@dimen/_21pxh"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginStart="@dimen/_21pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="@dimen/_54pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_timestyle"/>
                <LinearLayout android:id="@+id/linearGroup114"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15pxv"
                    android:layout_marginEnd="@dimen/_14pxh"
                    android:layout_marginStart="@dimen/_218pxh"
                    android:layout_marginTop="@dimen/_17pxv"
                    android:layout_weight="0.55"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageMobileSignal"
                        android:layout_height="@dimen/_10pxh"
                        android:layout_width="@dimen/_17pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_mobilesignal"/>
                    <ImageView android:id="@+id/imageWifi"
                        android:layout_height="@dimen/_10pxh"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_width="@dimen/_15pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_wifi"/>
                    <ImageView android:id="@+id/imageBattery"
                        android:layout_height="@dimen/_11pxh"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_battery"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ImageView android:clickable="true" android:id="@+id/imageLogo"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_72pxh"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_151pxh"
            android:layout_marginStart="@dimen/_151pxh"
            android:layout_marginTop="@dimen/_326pxv"
            android:layout_width="@dimen/_72pxh"
            android:scaleType="fitXY" imageRes="@{@drawable/img_logo}" tools:src="@drawable/img_logo"/>
    </LinearLayout>
</layout>
