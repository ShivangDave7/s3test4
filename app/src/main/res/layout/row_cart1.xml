<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="cart1RowModel" type="com.isapplication.app.modules.cart.data.model.Cart1RowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearProductdetails"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" style="@style/groupStylewhite_A700cornerRadius">
        <ImageView android:id="@+id/imageProductdetails"
            android:layout_height="@dimen/_72pxh"
            android:layout_marginBottom="@dimen/_16pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="@dimen/_72pxh"
            android:scaleType="fitXY"
            imageRes="@{@drawable/img_productdetails}" tools:src="@drawable/img_productdetails"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearProductdetails1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_15pxv"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_12pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_weight="0.76" android:layout_width="0dp" android:orientation="vertical">
            <LinearLayout android:id="@+id/linearProductdetail"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:id="@+id/txtNikeAirZoomP"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.77"
                    android:layout_width="0dp"
                    android:text="@{cart1RowModel.txtNikeAirZoomP}"
                    style="@style/txtPoppinsbold12_2" tools:text="@string/msg_nike_air_zoom_p"/>
                <ImageView android:id="@+id/imageLoveicon"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginStart="@dimen/_13pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_loveicon_1"/>
                <ImageView android:id="@+id/imageTrashicon"
                    android:layout_height="@dimen/_24pxh"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:layout_width="@dimen/_24pxh"
                    android:scaleType="fitXY" android:src="@drawable/img_trashicon"/>
            </LinearLayout>
            <LinearLayout android:id="@+id/linearPriceandquant"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtPrice"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_1pxv"
                    android:layout_weight="0.45"
                    android:layout_width="0dp" android:singleLine="true"
                    android:text="@{cart1RowModel.txtPrice}"
                    style="@style/txtPoppinsbold12" tools:text="@string/lbl_299_43"/>
                <LinearLayout android:id="@+id/linearInputNumber"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_29pxh"
                    android:layout_weight="0.55"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageRemove"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_33pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_remove"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btn1"
                        android:layout_height="@dimen/_20pxv"
                        android:layout_width="@dimen/_41pxh"
                        android:paddingEnd="@dimen/_9pxh"
                        android:paddingStart="@dimen/_12pxh"
                        android:singleLine="true"
                        android:text="@string/lbl_1"
                        android:textAllCaps="false"
                        style="@style/btnSolidOutline" tools:text="@string/lbl_1"/>
                    <ImageView android:id="@+id/imageAdd"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_33pxh"
                        android:scaleType="fitXY" android:src="@drawable/img_add"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
